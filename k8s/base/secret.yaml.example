apiVersion: v1
kind: Secret
metadata:
  name: coin-pilot-secret
  namespace: coin-pilot-ns
type: Opaque
stringData:
  # Base64 encoded values NOT needed here for stringData, but usually Secrets are base64. 
  # Using stringData for convenience in example, but real secret should be created carefully.
  # Values are PLACEHOLDERS.
  ANTHROPIC_API_KEY: "sk-ant-..."
  UPBIT_ACCESS_KEY: "access-key"
  UPBIT_SECRET_KEY: "secret-key"
  DB_PASSWORD: "secure-password"
  REDIS_URL: "redis://coinpilot-redis:6379/0"
